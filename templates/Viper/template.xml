<?xml version="1.0"?>
<template
    format="5"
    revision="1"
    name="Viper"
    description="Creates a new Viper module">

    <category value="MAGDV" />

    <parameter
        id="moduleName"
        name="Module Name"
        type="string"
        constraints="nonempty|class|unique"
		    default="Blank"
        help="The name of the module to create" />

    <parameter
        id="packageName"
        name="Package name"
        type="string"
        constraints="package"
        default="com.mycompany.myapp"/>

    <parameter
        id="subPackage"
        name="Sub package"
        type="string"
        constraints="nonempty"
        default="blank"
        suggest="${moduleName?lower_case}"
        help="Module sub package" />

    <parameter
        id="viewType"
        name="View"
        type="enum"
        default="activity"
        help="View parent class" >
        <option id="activity">Activity</option>
        <option id="fragment">Fragment</option>
        <option id="dialog">DialogFragment</option>
    </parameter>

    <parameter
        id="createInteractor"
        name="Create Interactor"
        type="boolean"
        default="true"
        help="Add interactor" >
    </parameter>

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

    <thumbs>
        <thumb>template_thumbnail.png</thumb>
    </thumbs>

</template>
